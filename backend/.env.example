# Database configuration
# Option 1: Use full MongoDB URI (recommended for production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nyelvszo?retryWrites=true&w=majority
# Option 2: Use individual config values (legacy, will build URI from these)
DB_HOST=your-mongodb-atlas-host
DB_USER=your-username
DB_PASS=your-password
DB_NAME=nyelvszo

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:4200,https://nyelvszo.eu

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security Headers
HELMET_ENABLED=true
TRUST_PROXY=false

# MongoDB Options
DB_MAX_POOL_SIZE=10
DB_SOCKET_TIMEOUT_MS=45000
DB_CONNECTION_TIMEOUT_MS=30000
