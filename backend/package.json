{
  "name": "nyelvszo-backend",
  "version": "2.2.0",
  "description": "NyelvSzó - English-Hungarian Linguistic Dictionary API",
  "main": "src/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "nodemon ./src/index.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:integration": "jest --testPathPattern=integration --detectOpenHandles --forceExit",
    "test:unit": "jest --testPathPattern=unit --detectOpenHandles --forceExit",
    "test:ci": "jest --ci --coverage --detectOpenHandles --forceExit --maxWorkers=2",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "build": "npm run build:frontend && npm run copy:frontend",
    "build:frontend": "cd ../frontend && npm run build",
    "copy:frontend": "cp -r ../frontend/dist/nyelvszo2.0/* ./public/",
    "seed": "node ./src/seed/seeder.js",
    "migrate": "node ./src/migrations/migrate.js",
    "db:backup": "node ./scripts/backup.js",
    "db:restore": "node ./scripts/restore.js",
    "health": "curl -s http://localhost:3000/health | jq"
  },
  "author": "Adam Dr. Porkolab & Tamás Dr. Fekete",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "config": "^4.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^6.15.0",
    "helmet": "^6.1.5",
    "http-errors": "^2.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.8.8",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "redis": "^4.6.7",
    "should": "^13.2.3",
    "supertest": "^6.2.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.4.0",
    "uuid": "^9.0.0",
    "winston": "^3.7.2",
    "winston-daily-rotate-file": "^4.7.1",
    "ws": "^8.18.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@types/jest": "^30.0.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.43.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-jest": "^27.2.2",
    "jest": "^29.5.0",
    "jest-environment-node": "^29.5.0",
    "jest-mock-req-res": "^1.0.2",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.1.10",
    "prettier": "^2.8.8",
    "superagent": "^8.0.9",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
